<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Button
        android:id="@+id/button1"
        android:text="="
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textSize="30sp"
        android:background="@drawable/equals"
        android:textColor="#FFFAFA"
        android:typeface="sans"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="15%"
        />

    <Button
        android:id="@+id/button2"
        android:text="+"
        android:layout_alignParentRight="true"
        android:layout_above="@id/button1"
        android:textSize="30sp"
        android:background="@drawable/blue"
        android:textColor="#87CEEB"
        android:typeface="sans"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="15%"
        />

    <Button
        android:id="@+id/button3"
        android:text="-"
        android:layout_alignParentRight="true"
        android:layout_above="@id/button2"
        android:textSize="30sp"
        android:background="@drawable/blue"
        android:textColor="#87CEEB"
        android:typeface="sans"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="15%"
        />

    <Button
        android:id="@+id/button4"
        android:text="ร"
        android:layout_alignParentRight="true"
        android:layout_above="@id/button3"
        android:textSize="30sp"
        android:background="@drawable/blue"
        android:textColor="#87CEEB"
        android:typeface="sans"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="15%"
        />

    <Button
        android:id="@+id/button5"
        android:text="รท"
        android:layout_alignParentRight="true"
        android:layout_above="@id/button4"
        android:textSize="30sp"
        android:background="@drawable/blue"
        android:textColor="#87CEEB"
        android:typeface="sans"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="15%"
        />

    <Button
        android:id="@+id/button6"
        android:text="."
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/button1"
        android:textSize="30sp"
        android:background="@drawable/color"
        android:textColor="#96292421"
        android:typeface="sans"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="15%"
        />

    <Button
        android:id="@+id/button7"
        android:text="3"
        android:layout_toLeftOf="@id/button2"
        android:layout_above="@id/button6"
        android:textSize="30sp"
        android:background="@drawable/button_gray"
        android:textColor="#96292421"
        android:typeface="sans"

        app:layout_widthPercent="25%"
        app:layout_heightPercent="15%"
        />

    <Button
        android:id="@+id/button8"
        android:text="6"
        android:layout_toLeftOf="@id/button3"
        android:layout_above="@id/button7"
        android:textSize="30sp"
        android:background="@drawable/button_gray"
        android:textColor="#96292421"
        android:typeface="sans"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="15%"
        />

    <Button
        android:id="@+id/button9"
        android:text="9"
        android:layout_toLeftOf="@id/button4"
        android:layout_above="@id/button8"
        android:textSize="30sp"
        android:background="@drawable/button_gray"
        android:textColor="#96292421"
        android:typeface="sans"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="15%"
        />

    <Button
        android:id="@+id/button10"
        android:text=")"
        android:layout_toLeftOf="@id/button5"
        android:layout_above="@id/button9"
        android:textSize="30sp"
        android:background="@drawable/blue"
        android:textColor="#87CEEB"
        android:typeface="sans"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="15%"
        />

    <Button
        android:id="@+id/button11"
        android:text="0"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/button6"
        android:textSize="30sp"
        android:background="@drawable/button_gray"
        android:textColor="#96292421"
        android:typeface="sans"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="15%"
        />

    <Button
        android:id="@+id/button12"
        android:text="2"
        android:layout_toLeftOf="@id/button7"
        android:layout_above="@id/button11"
        android:textSize="30sp"
        android:background="@drawable/button_gray"
        android:textColor="#96292421"
        android:typeface="sans"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="15%"
        />

    <Button
        android:id="@+id/button13"
        android:text="5"
        android:layout_toLeftOf="@id/button8"
        android:layout_above="@id/button12"
        android:textSize="30sp"
        android:background="@drawable/button_gray"
        android:textColor="#96292421"
        android:typeface="sans"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="15%"
        />

    <Button
        android:id="@+id/button14"
        android:text="8"
        android:layout_toLeftOf="@id/button9"
        android:layout_above="@id/button13"
        android:textSize="30sp"
        android:background="@drawable/button_gray"
        android:textColor="#96292421"
        android:typeface="sans"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="15%"
        />

    <Button
        android:id="@+id/button15"
        android:text="("
        android:layout_toLeftOf="@id/button10"
        android:layout_above="@id/button14"
        android:textSize="30sp"
        android:background="@drawable/blue"
        android:textColor="#87CEEB"
        android:typeface="sans"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="15%"
        />

    <Button
        android:id="@+id/button16"
        android:text="AC"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/button11"
        android:textSize="30sp"
        android:background="@drawable/color"
        android:textColor="#96292421"
        android:typeface="sans"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="15%"
        />

    <Button
        android:id="@+id/button17"
        android:text="1"
        android:layout_toLeftOf="@id/button12"
        android:layout_above="@id/button16"
        android:textSize="30sp"
        android:background="@drawable/button_gray"
        android:textColor="#96292421"
        android:typeface="sans"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="15%"
        />

    <Button
        android:id="@+id/button18"
        android:text="4"
        android:layout_toLeftOf="@id/button13"
        android:layout_above="@id/button17"
        android:textSize="30sp"
        android:background="@drawable/button_gray"
        android:textColor="#96292421"
        android:typeface="sans"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="15%"
        />

    <Button
        android:id="@+id/button19"
        android:text="7"
        android:layout_toLeftOf="@id/button14"
        android:layout_above="@id/button18"
        android:textSize="30sp"
        android:background="@drawable/button_gray"
        android:textColor="#96292421"
        android:typeface="sans"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="15%"
        />

    <Button
        android:id="@+id/button20"
        android:text="C"
        android:layout_toLeftOf="@id/button15"
        android:layout_above="@id/button19"
        android:textSize="30sp"
        android:background="@drawable/blue"
        android:textColor="#87CEEB"
        android:typeface="sans"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="15%"
        />

    <TextView
        android:id="@+id/text_view"
        app:autoSizeMinTextSize="20sp"
        app:autoSizeMaxTextSize="60sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="25%"
        android:text=""
        android:background="#ffffff"
        android:textColor="#292421"
        android:textSize="10dp"
        android:gravity="center_vertical|end"
        android:layout_above="@id/button5"
        />

</android.support.percent.PercentRelativeLayout>